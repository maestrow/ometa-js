{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ts: build all",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ts: build current",
            "type": "shell",
            "command": "./node_modules/.bin/tsc",
            "args": [
                "${file}"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "webpack",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build",
                "--",
                "--env",
                "src=${file}"
            ],
            "problemMatcher": []
        }
    ]
}